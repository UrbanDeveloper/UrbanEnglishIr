<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/textView_level3_Title"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <ImageView
        android:id="@+id/imageView_level3"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:contentDescription="@string/urban_english"
        android:src="@drawable/logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_view_num_L3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:paddingTop="2dp"
            android:contentDescription="@string/urban_english"
            android:src="@drawable/ic_vieweye"

            />

        <TextView
            android:id="@+id/textview_viewnum_L3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_title_text_view_L3"
            android:layout_toRightOf="@id/imageView_view_num_L3"
            android:paddingLeft="2dp"
            android:text="0"

            />

        <ImageView
            android:id="@+id/imageView_like_num_L3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
android:paddingTop="3dp"
            android:paddingBottom="2dp"
            android:layout_toEndOf="@+id/textview_viewnum_L3"
            android:layout_toRightOf="@+id/textview_viewnum_L3"
            android:contentDescription="@string/urban_english"
            android:src="@drawable/ic_like2"
            android:tint="@color/colorPrimaryDark"
            />

        <TextView
            android:id="@+id/textview_likenum_L3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_title_text_view_L3"
            android:layout_toRightOf="@id/imageView_like_num_L3"
            android:padding="5dp"
            android:text="0"/>

        <ImageView
            android:id="@+id/imageView_favorite_L3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignBottom="@+id/textview_viewnum_L3"
            android:layout_marginLeft="12dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="5dp"
            android:paddingBottom="2dp"
            android:layout_toEndOf="@+id/textview_likenum_L3"
            android:layout_toRightOf="@+id/textview_viewnum_L3"
            android:contentDescription="@string/urban_english"
            android:src="@drawable/ic_favorite_no"
            android:tint="@color/colorRed"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_Description_L3"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            />
    </ScrollView>

</LinearLayout>