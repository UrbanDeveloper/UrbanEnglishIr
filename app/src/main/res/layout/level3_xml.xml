<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView_level3_Title"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>
    <ImageView
        android:id="@+id/imageView_level3"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/logo"
        android:contentDescription="@string/urban_english"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView_view_num_L3"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/view"

            android:contentDescription="@string/urban_english"/>
        <TextView
            android:id="@+id/textview_viewnum_L3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_title_text_view_L3"
            android:layout_toRightOf="@id/imageView_view_num_L3"
            android:text="0"
            android:padding="2dp"/>

        <ImageView
            android:id="@+id/imageView_like_num_L3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/like"
            android:contentDescription="@string/urban_english"

            android:layout_toRightOf="@+id/textview_viewnum_L3"
            android:layout_toEndOf="@+id/textview_viewnum_L3"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"/>
        <TextView
            android:id="@+id/textview_likenum_L3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_item_title_text_view_L3"
            android:layout_toRightOf="@id/imageView_like_num_L3"
            android:text="0"
            android:padding="5dp"/>

        <ImageView
            android:id="@+id/imageView_favorite_L3"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:src="@drawable/ic_favorite_no"
            android:contentDescription="@string/urban_english"
            android:layout_alignBottom="@+id/textview_viewnum_L3"
            android:layout_toRightOf="@+id/textview_viewnum_L3"
            android:layout_toEndOf="@+id/textview_likenum_L3"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textView_Description_L3"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Description"
        />


</LinearLayout>