<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                xmlns:tools="http://schemas.android.com/tools">
    <TextView
        android:id="@+id/list_item_title_text_view_L2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textStyle="bold"
        tools:text="Title" />

    <ImageView
        android:id="@+id/imageView_view_num_L2"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/view"
        android:layout_below="@+id/list_item_title_text_view_L2"
        android:contentDescription="@string/urban_english"/>
    <TextView
        android:id="@+id/textview_viewnum_L2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_title_text_view_L2"
        android:layout_toRightOf="@id/imageView_view_num_L2"
        android:text="0"
        android:padding="2dp"/>

    <ImageView
        android:id="@+id/imageView_like_num_L2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/like"
        android:contentDescription="@string/urban_english"
        android:layout_alignBottom="@+id/textview_viewnum_L2"
        android:layout_toRightOf="@+id/textview_viewnum_L2"
        android:layout_toEndOf="@+id/textview_viewnum_L2"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"/>
    <TextView
        android:id="@+id/textview_likenum_L2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/list_item_title_text_view_L2"
        android:layout_toRightOf="@id/imageView_like_num_L2"
        android:text="0"
        android:padding="5dp"/>

    <ImageView
        android:id="@+id/imageView_favorite_L2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_favorite_no"
        android:contentDescription="@string/urban_english"
        android:layout_alignBottom="@+id/textview_viewnum_L2"
        android:layout_toRightOf="@+id/textview_viewnum_L2"
        android:layout_toEndOf="@+id/textview_likenum_L2"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"/>


</RelativeLayout>