<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <TextView
        android:id="@+id/list_item_title_text_view_L2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp"
        android:textStyle="bold"
        tools:text="Title"/>

    <ImageView
        android:id="@+id/imageView_view_num_L2"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_below="@+id/list_item_title_text_view_L2"
        android:contentDescription="@string/urban_english"
        android:paddingTop="2dp"
        android:src="@drawable/ic_vieweye"/>

    <TextView
        android:id="@+id/textview_viewnum_L2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/imageView_view_num_L2"
        android:layout_below="@+id/list_item_title_text_view_L2"
        android:layout_toRightOf="@id/imageView_view_num_L2"
        android:padding="2dp"
        android:text="0"/>

    <ImageView
        android:id="@+id/imageView_like_num_L2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBaseline="@+id/imageView_view_num_L2"
        android:layout_alignBottom="@+id/textview_viewnum_L2"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/textview_viewnum_L2"
        android:layout_toRightOf="@+id/textview_viewnum_L2"
        android:contentDescription="@string/urban_english"
        android:paddingBottom="2dp"
        android:src="@drawable/ic_like2"
        android:tint="@color/colorPrimaryDark"/>

    <TextView
        android:id="@+id/textview_likenum_L2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/imageView_view_num_L2"
        android:layout_below="@+id/list_item_title_text_view_L2"
        android:layout_toRightOf="@id/imageView_like_num_L2"
        android:padding="2dp"
        android:text="0"/>

    <ImageView
        android:id="@+id/imageView_favorite_L2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBaseline="@+id/imageView_view_num_L2"
        android:layout_alignBottom="@+id/textview_viewnum_L2"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/textview_likenum_L2"
        android:layout_toRightOf="@+id/textview_viewnum_L2"
        android:contentDescription="@string/urban_english"
        android:src="@drawable/ic_favorite_no"
        android:tint="@color/colorRed"
        android:paddingBottom="2dp"
        />


</RelativeLayout>